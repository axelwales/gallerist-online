@using TeamJAMiN.Models.ComponentViewModels
@using TeamJAMiN.Models.GameViewHelpers
@model InfluenceTrackViewModel

@*Influence Track*@
@{ var spaceEnum = Model.Spaces.GetEnumerator(); }
<div class="row no-gutter">
    @for (int j = 0; j < 4; j++)
    {
        <div class="col-lg-3 col-md-6 col-sm-12 influence-track-section">
            @for (int k = 0; k < 3; k++)
            {
                <div class="col-sm-4 col-xs-6">
                    <div class="row no-gutter">
                        @for (int m = 0; m < 3; m++)
                        {
                            spaceEnum.MoveNext();
                            var space = spaceEnum.Current;
                            if (space.HasActionForm)
                            {
                                Html.GetActionForm("~/Views/Game/InfluenceTrack/InfluenceTrackSpace.cshtml", Model.Game, space.State, space.Location, space);

                            }
                            else
                            {
                                @Html.Partial("~/Views/Game/InfluenceTrack/InfluenceTrackSpace.cshtml", space)
                            }
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>